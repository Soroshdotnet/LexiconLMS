@using LexiconLMS.Shared.DTOs;


<div id="courseAttendees">
    <ul class="list-group">
        <li class="list-group-item active"><b>Attendees</b></li>
        @if (Students.Count() == 0)
        {
            <li class="list-group-item">No Students added</li>
        }
        @foreach (var student in Students)
        {
            <li class="list-group-item list-group-item-action" @onclick="() => GetStudent(student.UserName)" @onclick:stopPropagation="true">@student.FullName</li>
        }
    </ul>
</div> 

@code {

    [Parameter]
    public IEnumerable<UserDto> Students { get; set; } = new List<UserDto>();



    private void GetStudent(string studentname)
    {
        Console.WriteLine("From Attendees: " + studentname);
    }

}